<?xml version="1.0" encoding="utf-8" ?>
<base:BaseContentPage
    x:Class="HB.FullStack.Client.Base.BaseModalDialog"
    xmlns="http://xamarin.com/schemas/2014/forms"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:base="clr-namespace:HB.FullStack.Client.Base"
    xmlns:d="http://xamarin.com/schemas/2014/forms/design"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">
    <base:BaseContentPage.Resources>
        <ControlTemplate x:Key="DialogControlTemplate">

            <StackLayout x:Name="ModalDialogContainer">

                <Frame
                    x:Name="ModalDialogFrame"
                    CornerRadius="10"
                    WidthRequest="280"
                    HasShadow="True"
                    BackgroundColor="White"
                    HorizontalOptions="CenterAndExpand"
                    VerticalOptions="CenterAndExpand">

                    <StackLayout>

                        <ContentPresenter />
                    </StackLayout>

                </Frame>
            </StackLayout>

        </ControlTemplate>
    </base:BaseContentPage.Resources>
</base:BaseContentPage>